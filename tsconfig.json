{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "lib": [
      "es6",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dts",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./node_modules/phaser-ce/typescript/phaser.comments.d.ts",
    "./node_modules/protobufjs/minimal.d.ts"
  ]
}
